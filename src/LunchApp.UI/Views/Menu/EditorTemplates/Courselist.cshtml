@model IList<LunchApp.UI.Models.CourseViewModel> 
<div id="products" class="row view-group">

    @for (int i = 0; i < Model.Count(); i++)
    {
        @Html.HiddenFor(model => Model[i].Id)
        <div class="item col-xs-4 col-lg-4">
            <div class="thumbnail card">
                <div class="caption card-body">
                    <h4 class="group card-title inner list-group-item-heading">
                        @Html.DisplayFor(model => model[i].Name)
                    </h4>
                    <p class="group inner list-group-item-text">
                        <span class="font-weight-bold"><i class="fas fa-thumbs-down" aria-hidden="true"></i></span>
                        @Html.EditorFor(model => model[i].ReviewScore)
                        <input class="custom-range menu-course-rating" type="range" min="0" max="5" />
                        <span class="font-weight-bold"><i class="fas fa-thumbs-up" aria-hidden="true"></i></span>
                    </p>
                </div>
            </div>
        </div>
    }
</div>