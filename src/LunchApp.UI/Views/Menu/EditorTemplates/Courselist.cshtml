@model IList<LunchApp.UI.Models.CourseViewModel>
<div id="products" class="row view-group">

    @for (int i = 0; i < Model.Count(); i++)
    {
        @Html.HiddenFor(model => Model[i].Id)
        @Html.HiddenFor(model => Model[i].Name)
        <div class="item col-xs-4 col-lg-4 list-group-item">
            <div class="thumbnail card">
                <div class="caption card-body">
                    <h4 class="group card-title inner list-group-item-heading">
                        @Html.DisplayFor(model => model[i].Name)
                    </h4>
                    <div class="row">
                        <div class="col-xs-12 col-md-12">
                            @Html.EditorFor(model => model[i].ReviewScore, "RatingEditor")
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-md-6">
                            @Html.LabelFor(mode => Model[i].ReviewScoreAverage)
                        </div>
                        <div class="col-xs-12 col-md-6">
                            @Html.DisplayFor(mode => Model[i].ReviewScoreAverage)
                        </div>                     
                    </div>
                </div>
            </div>
        </div>
    }
</div>