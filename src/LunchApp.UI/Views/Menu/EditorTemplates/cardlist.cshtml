@model IList<LunchApp.UI.Models.CourseViewModel>
<div id="products" class="container">
    <div class="row">
        @for (int i = 0; i < Model.Count(); i++)
        {
            <div class="col-sm-6">
                @Html.HiddenFor(model => Model[i].Id)
                @Html.HiddenFor(model => Model[i].Name)
                <div class="card mt-sm-2 ">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-sm-10">
                                @Html.LabelFor(mode => Model[i].ReviewScoreAverage)
                            </div>
                            <div class="col-sm-2 float-right">
                                @Html.DisplayFor(mode => Model[i].ReviewScoreAverage)
                            </div>
                        </div>                                             
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"> @Html.DisplayFor(model => model[i].Name)</h5>
                        <div class="row">
                            @Html.EditorFor(model => model[i].ReviewScore, "RatingEditor")
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>